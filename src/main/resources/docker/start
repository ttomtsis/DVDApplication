# Script to initialize back-end and run the
# dvd management application

# Create Volume
docker volume create mydb_volume

# Create Network
docker network create -d bridge dvd_network

# Build Images
docker build -t dvd_mysql_server ./MySQLDocker
docker build -t dvd_spring_server ./SpringServer

# Create Containers and connect them to network
docker run --network dvd_network -v mydb_volume:/var/lib/mysql --name dvd_mysql -d dvd_mysql_server
docker run -p 8080:8080 --network dvd_network --name dvd_server dvd_spring_server 

# Configure network